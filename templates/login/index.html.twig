{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}
{% block bread %}
    â†’ Login
{% endblock %}

{% block body %}
    <form action="{{ path('app_login') }}" method="POST">
        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium" for="_username">Email</label>
            <input class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2"
                   type="text"
                   name="_username"
                   id="_username"
                   value="{{ lastUsername }}"/>
        </div>
        <div>
            <label class="block text-sm text-gray-700 dark:text-gray-300 font-medium" for="_password">Password</label>
            <input class="block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2"
                   type="password"
                   name="_password"
                   id="_password" />
        </div>
        <input type="hidden" name="_target_path" value="{{ path('app_micro_post') }}">
        <div>
            <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700
            dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Login</button>
        </div>
    </form>

    <div class="mt-2 text-center text-gray-600 dark:text-gray-400">
        Don't have an account? <a class="text-indigo-600" href="{{ path('app_register') }}">Register here</a>
    </div>
{% endblock %}
